{% extends 'base.html.twig' %}

{% block title %} Modifier Projet {% endblock %}

{% block body %}
<style>

    li.button {
        background-color: white;
        border-radius: 20px;
        font-size: 20pt;
    }

    span.plustext {
        color: green;
        font-size: 20pt;
        border: solid;
        border-radius: 20px;
        
    }

    

</style>



<div id="topbar">

    <span id="logo"><a href="{{ path('app_projets') }}"><img src="https://step.eco/wp-content/uploads/2021/11/Logo-bleu-STEP-RVB-300x128.png" alt="Logo de Step"></a></span>
    <span id="deconnexion"><a id="deconnect" href="{{ path('app_logout') }}">Se d√©connecter</a></span>
</div>

<div style="position: fixed;top:20%;">

<a href="{{ path('app_projets') }}">Retour</a>

{% if useredit == true %}
    <p>Participants au projets :</p>
    <ul class="alignlist">
    {% for user in projet.users %}
        <li>{{ user.prenom }} {{ user.nom }}, </li>
    {% endfor %} 
    </ul>
{% endif %}

{% if useredit == false %}
<p>Editer le projet <span style="color: rgb(105, 87, 6);"> {{ projet }} </span></p>
{% endif %}

{{ form(form) }}

</div>

{% endblock %}

